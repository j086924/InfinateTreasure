<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/top_homepage" />
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/login_divider"
        />
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="10"
         android:orientation="vertical"
         android:gravity="center_horizontal"
         >
       <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="2"
         android:orientation="horizontal"
         android:layout_gravity="center_vertical"
         >
         
           <RelativeLayout 
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:layout_gravity="center_vertical"
               >
               
               <TextView
                   android:id="@+id/new_institution_num"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentTop="true"
                   android:layout_centerInParent="true"
                   android:textSize="@dimen/new_num_txt_site"
                   android:textColor="@color/new_institution_num_color"
                   android:text="288" />

               <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/new_institution_num"
               android:layout_centerInParent="true"
               android:layout_marginTop="@dimen/layout_margin"
               android:text="@string/new_add_institution_num" />
               
           </RelativeLayout>

          

           <View 
               android:layout_width="1dp"
               android:layout_height="wrap_content"
               android:background="@drawable/divider_vertical"
               />

         <RelativeLayout 
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:layout_gravity="center_vertical"
               >
               
               <TextView
                   android:id="@+id/new_project_num"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentTop="true"
                   android:layout_centerInParent="true"
                   android:textSize="@dimen/new_num_txt_site"
                   android:textColor="@color/new_project_num_color"
                   android:text="188" />

               <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/new_project_num"
               android:layout_centerInParent="true"
               android:layout_marginTop="@dimen/layout_margin"
               android:text="@string/new_add_project_num" />
               
           </RelativeLayout>
         
     </LinearLayout>
     
        <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/login_divider"
        />
     
       <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="2"
         android:gravity="center"
         android:orientation="vertical"
         >
        
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:orientation="horizontal"
             android:layout_gravity="center_vertical"
             >
              <LinearLayout
                  android:id="@+id/contacts_recommend1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:onClick="true"
                  android:gravity="center"
                   >
                   <cn.infinate.treasure.view.RoundImageView 
                       android:id="@+id/contacts_recommend1_img"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/login_qq"
                       />
                   <TextView 
                       android:id="@+id/contacts_recommend1_txt"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="林先生"
                       />
                  
              </LinearLayout>
              
              <LinearLayout
                  android:id="@+id/contacts_recommend2"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center"
                   >
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/login_qq"
                       />
                   <TextView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="李晶"
                       />
                  
              </LinearLayout>
              
              <LinearLayout
                  android:id="@+id/contacts_recommend3"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center"
                   >
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/login_qq"
                       />
                   <TextView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="黄聊"
                       />
                  
              </LinearLayout>
              
              <LinearLayout
                  android:id="@+id/contacts_recommend4"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center"
                   >
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/login_qq"
                       />
                   <TextView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="李女士"
                       />
                  
              </LinearLayout>
              
              <LinearLayout
                  android:id="@+id/contacts_recommend5"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center"
                   >
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/login_qq"
                       />
                   <TextView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="尹先生"
                       />
                  
              </LinearLayout>
             
             
         </LinearLayout>
           
         
         
     </LinearLayout>
      <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/login_divider"
        />
     
       <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="2"
         android:gravity="center"
         android:orientation="vertical"
         >
        
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:orientation="horizontal"
             android:layout_gravity="center_vertical"
             >
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center"
                   >
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/circle_red_bg"
                       />
                   <TextView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="财经圈"
                       />
                  
              </LinearLayout>
              
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center"
                   >
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/circle_blue_bg"
                       />
                   <TextView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="股票圈"
                       />
                  
              </LinearLayout>
              
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center"
                   >
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/circle_yellow_bg"
                       />
                   <TextView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="证券圈"
                       />
                  
              </LinearLayout>
              
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center"
                   >
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/circle_blue_bg"
                       />
                   <TextView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="期货圈"
                       />
                  
              </LinearLayout>
              
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center"
                   >
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/circle_red_bg"
                       />
                   <TextView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="保险圈"
                       />
                  
              </LinearLayout>
             
             
         </LinearLayout>
           
         
         
     </LinearLayout>
      <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/login_divider"
        />
     
       <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="4"
         android:gravity="center"
         android:orientation="vertical"
         >
         
           <ListView 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >
               
           </ListView>
         
     </LinearLayout>
         
     </LinearLayout>


</LinearLayout>