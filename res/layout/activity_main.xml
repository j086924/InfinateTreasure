    <LinearLayout
        android:id="@+id/tab_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ImageButton
        android:id="@+id/id_tab_homepage_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:clickable="false"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/tab_main_selector" />

        <ImageButton
            android:id="@+id/id_tab_contacts_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:clickable="false"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/tab_contacts_selector" />
        
         <ImageButton
            android:id="@+id/id_tab_circle_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:clickable="false"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/tab_circle_selector" />
         
         <ImageButton
            android:id="@+id/id_tab_project_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:clickable="false"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/tab_project_selector" />
        
        <ImageButton
            android:id="@+id/id_tab_me_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:clickable="false"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/tab_my_selector" />

    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1.1dp"
        android:layout_above="@+id/tab_item_container"
        android:background="@color/my_black_line" />

    <FrameLayout
        android:id="@+id/lay_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_line"
        android:layout_below="@+id/status_bar"
        android:orientation="vertical">

    </FrameLayout>
    

</RelativeLayout>