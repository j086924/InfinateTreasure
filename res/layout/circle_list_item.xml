<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >
    
    <cn.infinate.treasure.view.RectImageView 
        android:id="@+id/circle_list_img"
        android:layout_width="@dimen/imageview_size"
        android:layout_height="@dimen/imageview_size"
        android:layout_marginLeft="@dimen/layout_margin"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding"
        android:src="@drawable/ic_launcher"
        />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_toRightOf="@+id/circle_list_img"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        
        <TextView
        android:id="@+id/circle_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:gravity="center_vertical"
        android:text="11223423" />
         
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle_list_text"
            android:layout_alignLeft="@+id/circle_list_text"
            android:layout_marginTop="@dimen/padding"
            android:orientation="horizontal"
            
            >

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/count_person" />
 
         <TextView
	        android:id="@+id/circle_person_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/padding"
	        android:text="3423" />
             
        <ImageView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/count_person"
             android:layout_marginLeft="@dimen/select_area_height"
             /> 
         <TextView
	        android:id="@+id/circle_comment_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/padding"
	        android:text="23423" />
        </LinearLayout> 
        
    </RelativeLayout>
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right"
        android:layout_alignParentRight="true"
        android:padding="@dimen/padding"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/layout_margin"
        />
   

</RelativeLayout>
